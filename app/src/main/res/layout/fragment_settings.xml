<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._home.home_fragment">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4121212"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--        profile-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="30dp"
               >
               <androidx.cardview.widget.CardView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginHorizontal="20dp"
                   android:layout_marginVertical="15dp"
                   app:cardCornerRadius="200dp">
                   <ImageView
                       android:background="@drawable/profile_border"
                       android:id="@+id/cover"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_launcher_foreground"
                       />
               </androidx.cardview.widget.CardView>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:padding="15dp"
                       android:textSize="18dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Rojan L. Yepes"
                       android:textColor="#fff"
                       android:fontFamily="@font/pacifico"
                       />

               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:paddingLeft="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Basics"
                   android:textColor="#fff"
                   android:fontFamily="@font/poppins"
                   />
           </LinearLayout>
           <LinearLayout
               android:background="@drawable/label_box"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="200dp"
               android:layout_margin="15dp"
               >
               <TextView
                   android:drawableLeft="@drawable/userid"
                   android:padding="15dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="User ID"
                   android:textColor="#fff"
                   android:fontFamily="@font/poppins"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="200dp"
               android:layout_margin="15dp"
               android:background="@drawable/label_box"
               >
               <TextView
                   android:padding="15dp"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/email"
                   android:text="dctrrohan@gmail.com"
                   android:textColor="#fff"
                   android:fontFamily="@font/poppins"
                   />
           </LinearLayout>
           <LinearLayout
               android:paddingLeft="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Edit Username & Password"
                   android:textColor="#fff"
                   android:textSize="13sp"
                   android:fontFamily="@font/poppins"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="200dp"
               android:layout_margin="15dp"
               android:background="@drawable/label_box"
               >
                <EditText
                    android:padding="10dp"
                    android:background="@null"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/person"
                    android:drawablePadding="10dp"
                    android:textSize="12dp"
                    app:textInputLayoutFocusedRectEnabled="false"
                    android:hint="username"
                    />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="200dp"
               android:layout_margin="15dp"
               android:background="@drawable/label_box"
               >
               <EditText
                   android:padding="10dp"
                   android:background="@null"
                   android:id="@+id/password"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:drawableLeft="@drawable/password"
                   android:drawablePadding="10dp"
                   android:textSize="12dp"
                   app:textInputLayoutFocusedRectEnabled="false"
                   android:hint="password"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="200dp"
               android:gravity="center"
               >
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAllCaps="false"
                   app:cornerRadius="20dp"
                   android:text="save"
                   style="@style/myButton"
                   android:textColor="#000"
                   android:fontFamily="@font/poppins"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_marginHorizontal="10dp"
               android:padding="12dp"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/logout_box"
               >
               <TextView
                   android:padding="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Switch to Other Account"
                   android:textColor="#419CED"
                   android:fontFamily="@font/poppins"
                   />
               <TextView
                   android:padding="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Log out"
                   android:textColor="#EDA842"
                   android:fontFamily="@font/poppins"
                   android:textSize="15sp"
                   />
           </LinearLayout>


       </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>