<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._home.home_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pacifico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="50dp"
                android:text="Booking App"
                android:textColor="#E6E4DF"
                android:textSize="26sp" />

            <ImageView
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/alien"
                />
            <TextView
                android:fontFamily="@font/poppins"
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="50dp"
                android:text="Tripl AM booking app is an online booking system that allows potential customers/guests to self-book and reserve their desired and comfortable seats via applications."
                android:justificationMode="inter_word"
                android:textColor="#BFBEBB"
                android:textSize="14sp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>