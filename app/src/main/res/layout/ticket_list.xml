<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <LinearLayout
       android:layout_marginVertical="10dp"
       android:background="@drawable/ticket_layout"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:orientation="vertical"
       >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/cinemaNo"
               android:layout_width="125dp"
               android:layout_height="22dp"
               android:layout_marginTop="4dp"
               android:fontFamily="@font/muli_bold"
               android:text="Cinema 1"
               android:textAlignment="center"
               android:textColor="#000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.59"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/movieID"
               android:layout_width="73dp"
               android:layout_height="16dp"
               android:layout_marginTop="4dp"
               android:fontFamily="@font/muli_bold"
               android:text="Cinema 1"
               android:textAlignment="center"
               android:textColor="#000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.047"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/title"
               android:layout_width="177dp"
               android:layout_height="23dp"
               android:layout_marginTop="40dp"
               android:fontFamily="@font/muli_bold"
               android:text="Encanto"
               android:textAlignment="center"
               android:textColor="#000"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="64dp"
               android:fontFamily="@font/poppins"
               android:text="Jan 10"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="11sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.294"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day2"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="80dp"
               android:fontFamily="@font/poppins"
               android:text="Date"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.294"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/time"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="92dp"
               android:fontFamily="@font/poppins"
               android:text="Jan 10"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="11sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.294"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day4"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="104dp"
               android:fontFamily="@font/poppins"
               android:text="time"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.294"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/userID"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="40dp"
               android:fontFamily="@font/poppins"
               android:text="Jan 10"
               android:textAlignment="center"
               android:textColor="#000"
               android:textSize="11sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.032"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day9"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="56dp"
               android:fontFamily="@font/poppins"
               android:text="user ID"
               android:textAlignment="center"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.032"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day8"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="104dp"
               android:fontFamily="@font/poppins"
               android:text="Bar Code"
               android:textAlignment="center"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.032"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:id="@+id/barcode"
               android:layout_width="58dp"
               android:layout_height="36dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.059"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.809"
               app:srcCompat="@drawable/blue" />

           <TextView
               android:id="@+id/purDate"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="64dp"
               android:fontFamily="@font/poppins"
               android:text="Purchase Date Here"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="11sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.635"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day5"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="76dp"
               android:fontFamily="@font/poppins"
               android:text="purchase date"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.635"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/day7"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="100dp"
               android:fontFamily="@font/poppins"
               android:text="seat no:"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="8sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.635"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/seat"
               android:layout_width="63dp"
               android:layout_height="14dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="88dp"
               android:fontFamily="@font/poppins"
               android:text="Jan 10"
               android:textAlignment="textStart"
               android:textColor="#000"
               android:textSize="11sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.635"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:id="@+id/mCover"
               android:layout_width="69dp"
               android:layout_height="142dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.996"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:srcCompat="@drawable/blue" />
       </androidx.constraintlayout.widget.ConstraintLayout>

   </LinearLayout>
</LinearLayout>