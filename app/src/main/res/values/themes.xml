<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieBooking" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="yes">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="cornerRadius">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="no">
        <item name="android:backgroundTint">#00FFFFFF</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="cornerRadius">9sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myButton">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="cornerRadius">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="getReservation">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="cornerRadius">50sp</item>
    </style>

    <style name="frontButton">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">15dp</item>
        <item name="cornerRadius">30sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="diagAnim">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
    <style name="gridButton">
        <item name="backgroundTint">#8A8986</item>
        <item name="cornerRadius">10sp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="catButton">
        <item name="backgroundTint">#8A8986</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="cornerRadius">10sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="unavailableButton">
        <item name="backgroundTint">@color/unavailable</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="cornerRadius">10sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="imageStyle">
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="bookTicket">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="cornerRadius">50sp</item>
    </style>
    <style name="movieButton">
        <item name="android:backgroundTint">#7CFFB43A</item>
        <item name="cornerRadius">50sp</item>
    </style>
    <style name="gridLable">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#BCBAB8</item>
    </style>

</resources>