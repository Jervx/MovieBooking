<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieBooking" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="myButton">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="cornerRadius">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="frontButton">
        <item name="android:backgroundTint">#ffb43a</item>
        <item name="boxStrokeWidth">12dp</item>
        <item name="android:textSize">15dp</item>
        <item name="cornerRadius">30sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="diagAnim">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

</resources>